*{
	margin: 0;
	box-sizing: border-box;
	
}

body{
  font-family: italian;
  color: white;
  background-color: black;
}

.container{
	max-width: 1140px;
	width: 100%;
	margin: -100px auto;
	margin-top: 25px;
	align-items: center;
}


.navigation{
	display: flex;
	justify-content: space-between;
	align-items: center;
}

nav a {
	padding: 20px;
	color: white;
	text-decoration: none;
}

.hide{
    display: none;
}
.fa-bars{color: white;
    font-size: 24px;
    display: none;
    padding: 20px;

}


.sub{
    position: fixed;
    left: -300px;
    top: 0px;
    height: 100%;
    z-index: 999;
    width: 300px;
    transition: .5s;
    background-color: white;
    opacity: 0.3;
}

.sub li{
    margin-left: 10px;
    position: relative;
    display: block;
}


.sub li a{
    color: black;
    font-size: 15px;
    display: block;
    text-transform: uppercase;
    padding: 14px;
    font-weight: bold;
}


.left{
    left: 0;
}
.background-image{
    background-image:url('../image/pic.jpg');
    height: 932px;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}
